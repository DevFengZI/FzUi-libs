<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fz_spacing_horizontal"
    android:background="@null"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/dialog_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fz_spacing_vertical"
        android:paddingRight="@dimen/fz_spacing_vertical"
        android:paddingTop="@dimen/fz_spacing_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/fz_color_black"
            android:textSize="@dimen/fz_size_big" />

        <LinearLayout
            android:id="@+id/dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/fz_spacing_vertical"
            android:paddingTop="@dimen/fz_spacing_vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/fz_size_med" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@null"
                android:text="取消"
                android:textColor="@color/fz_color_blue"
                android:textSize="@dimen/fz_size_normal" />

            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@null"
                android:text="确认"
                android:textColor="@color/fz_color_blue"
                android:textSize="@dimen/fz_size_normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>